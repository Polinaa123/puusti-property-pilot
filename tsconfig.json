{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "api/*", "utils/*"]
    },
    "strict": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "src",
    "api",
    "utils"
  ]
}