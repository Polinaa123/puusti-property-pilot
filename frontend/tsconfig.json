{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "types": ["react", "react-dom"],
    "allowJs": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*", "api/*", "utils/*"]
    },
    "strict": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "src",
    "api",
    "utils"
  ]
}